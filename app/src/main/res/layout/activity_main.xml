<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:stretchColumns="*"
        tools:context=".MainActivity">

    <TableRow>
        <TextView
                android:id="@+id/txt_text"
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:textSize="30sp"
                android:layout_span="4"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
        />
    </TableRow>
    <TableRow>
        <Button android:text=""
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_c"
                android:text="C"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_del"
                android:text="del"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_chia"
                android:text="/"
                android:layout_height="90dp"
                android:textSize="20sp"/>/>
    </TableRow>
    <TableRow>

        <Button
                android:id="@+id/btn_7"
                android:text="7"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_8"
                android:text="8"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_9"
                android:text="9"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_nhan"
                android:text="x"
                android:layout_height="90dp"
                android:textSize="20sp"/>/>
    </TableRow>
    <TableRow>
        <Button
                android:id="@+id/btn_4"
                android:text="4"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_5"
                android:text="5"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_6"
                android:text="6"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_tru"
                android:text="-"
                android:layout_height="90dp"
                android:textSize="20sp"/>/>
    </TableRow>
    <TableRow>
        <Button
                android:id="@+id/btn_1"
                android:text="1"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_2"
                android:text="2"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_3"
                android:text="3"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_cong"
                android:text="+"
                android:layout_height="90dp"
                android:textSize="20sp"/>/>
    </TableRow>
    <TableRow>
        <Button android:text=""
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_0"
                android:text="0"
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_cham"
                android:text="."
                android:layout_height="90dp"
                android:textSize="20sp"/>
        <Button
                android:id="@+id/btn_bang"
                android:text="="
                android:layout_height="90dp"
                android:textSize="20sp"/>/>
    </TableRow>

</TableLayout>